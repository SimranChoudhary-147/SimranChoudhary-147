class Solution {
public:
    int rob(vector<int>& nums) {
        int n=nums.size();
        if(n==1)
            return nums[0];
        if(n==2)
            return max(nums[0],nums[1]);
        if(n==3)
            return max(nums[1],max(nums[0],nums[2]));
        
        int dp[n+1]; 
        dp[0]=nums[0]; 
        dp[1]=max(nums[0],nums[1]);
        for(int i=2;i<n-1;i++)
            dp[i]=max(dp[i-1],nums[i]+dp[i-2]);
        int tp[n+1];
        tp[1]=nums[1]; tp[2]=max(nums[1],nums[2]);
        for(int i=3;i<n;i++)
            tp[i]=max(tp[i-1],tp[i-2]+nums[i]);
        
        return max(dp[n-2],tp[n-1]);
    }
};
