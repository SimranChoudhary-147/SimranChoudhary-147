#include <stdio.h>  
#include <string.h>  
   
int main()  
{  
    int n;
    printf("Enter the length of string\n"); scanf("%d",&n);
    char str1[n] , str2[n]; 
    scanf("%s%s",str1,str2);  
    strcat(str1, str1);  
          
        if(strstr(str1, str2) != NULL)   //checks the presence of second string in the first
            printf("Second string is a rotation.");  
        else  
            printf("Second string is not a rotation."); 
   
    return 0;  
}
