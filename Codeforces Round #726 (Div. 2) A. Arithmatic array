#include <bits/stdc++.h>

using namespace std;

int main()
{
   int t;
   cin>>t;
   while(t--)
   { int sum=0;
      int n; cin>>n; int a[n]; for(auto &x: a) { cin>>x; sum+=x; }
     if (sum >=n )
        {cout<<sum - n<<endl;}
        else
        {
            cout<<"1"<<endl;
        }
   }

    return 0;
}
